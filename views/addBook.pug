extends layout

block content
  main
    aside
      form(method='POST' action='/addBook')
        div
          label(for='title') Book Title:
          input#bookTitle(type='text', placeholder='Title' name='title')
        div
          label(for='description') Description:
          input#description(type='text', placeholder='description' name='description')
        div
          label(for='image_url') Favorite Book:
          input#imageUrl(type='text', placeholder='Image Url' name='image_url')
        div
          label(for='Select a Name')
            select( name='author_id' )
              for author in authors
                option(value=author.id)=author.name

        button(type='submit') Submit
