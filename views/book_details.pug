extends layout

block content
  div
    h4=book.title
    p=book.description

    a( href='/author-details/' + author.id )
      h5=author.name

    a.btn.btn-success( type="button" href='/updateBook/' + book.id ) UpdateBook

    a.btn.btn-danger( href='/deleteBook/' + book.id ) Delete Book
    div
      img( src=book.image_url )
